%nav.navbar{role: 'navigation', 'aria-label': 'main navigation'}
  .container
    .navbar-brand
      = link_to root_path, class: "navbar-item" do
        = image_tag 'logo.png', width: 112, height: 28

      %a.navbar-burger.burger{role: 'button', 'aria-label': 'menu', 'aria-expanded': false, data: {target: 'navbar-menu'}}
        %span{'aria-hidden': true}
        %span{'aria-hidden': true}
        %span{'aria-hidden': true}

    #navbar-menu.navbar-menu
      .navbar-start
        = link_to "Pricing", pricing_path, class: "navbar-item"
        = link_to "About", about_path, class: "navbar-item"

      .navbar-end
        .navbar-item
          .buttons
            = link_to "Sign up", main_app.new_user_registration_path, class: "button is-success" if Flipper.enabled?(:public_registration)
            = link_to "Sign in", main_app.new_user_session_path, class: "button is-primary"
