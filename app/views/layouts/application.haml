!!!
%html.has-navbar-fixed-top
  %head
    %title Limestone
    %meta{ content: "text/html; charset=UTF-8", "http-equiv": "Content-Type" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1" }
    %meta{ "http-equiv": "x-ua-compatible", content: "ie=edge" }

    = action_cable_meta_tag

    = tag :meta, name: "stripe-key", content: Pay::Stripe.public_key
    -# Sprockets application.js
    = javascript_include_tag "application", "data-turbolinks-track": "reload"
    -# Webpacker application.js
    = javascript_pack_tag "application", "data-turbolinks-track": "reload"
    -# Webpacker application.css
    = stylesheet_pack_tag 'application'
    = javascript_include_tag "https://js.stripe.com/v3/"

    = csrf_meta_tags

  %body{ turbolinks? }
    = render "layouts/past_due" if user_signed_in? && !current_user.on_trial_or_subscribed?
    = render user_signed_in? ? "shared/navbar/signed_in" : "shared/navbar/signed_out"
    = render 'shared/messages'
    = yield
    = render 'shared/footer'
