    %hr/

    .columns
      .column.is-4
        .card
          .card-header.has-text-centered
            %h1.card-header-title Basic Access Plan
          .card-image
            %figure.image.is-3by2
              = image_tag 'https://via.placeholder.com/600x400'
          .card-content
            %h5.has-text-centered
              %b $9.00
              %small USD/month
              %ul{style: 'min-height: 6.5rem;'}
                %li
                  = icon(:check)
                  Get access
          .card-footer
            = link_to 'Get Basic', new_registration_path(resource_name, plan_id: Product.active&.first&.plans&.active&.first&.id), class: 'button is-primary is-fullwidth'

      .column.is-4
        .card
          .card-header.has-text-centered
            %h1.card-header-title Pro Access Plan
          .card-image
            %figure.image.is-3by2
              = image_tag 'https://via.placeholder.com/600x400'
          .card-content
            %h5.has-text-centered
              %b $15.00
              %small USD/month
              %ul{style: 'min-height: 6.5rem;'}
                %li
                  = icon(:check)
                  Get access
                %li
                  = icon(:check)
                  Access to Pro page
          .card-footer
            = link_to 'Get PRO', new_registration_path(resource_name, plan_id: Product.active&.second&.plans&.active&.first&.id), class: 'button is-primary is-fullwidth'

      .column.is-4
        .card
          .card-header.has-text-centered
            %h1.card-header-title Corporate Access Plan
          .card-image
            %figure.image.is-3by2
              = image_tag 'https://via.placeholder.com/600x400'
          .card-content
            %h5.has-text-centered
              %b $100.00
              %small USD/month
              %ul{style: 'min-height: 6.5rem;'}
                %li
                  = icon(:check)
                  Get access
                %li
                  = icon(:check)
                  Access to Pro page
                %li
                  = icon(:check)
                  Shenanigans

          .card-footer
            = link_to 'Get PRO', new_registration_path(resource_name, plan_id: Product.active&.second&.plans&.active&.first&.id), class: 'button is-primary is-fullwidth'
